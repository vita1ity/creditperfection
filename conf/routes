# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# signup flow
GET     /                           controllers.SignUpFlowController.index(login: java.lang.Boolean ?= null)
POST    /register                   controllers.SignUpFlowController.register
GET     /registertoken/:token       controllers.SignUpFlowController.registerToken(token: String)
POST    /choose-product             controllers.SignUpFlowController.chooseProduct()
POST    /payment-details            controllers.SignUpFlowController.processPaymentAndGetReport

# report
POST	/get-report					controllers.CreditReportController.processUrl
GET     /report                     controllers.CreditReportController.reportPage

# login

POST    /login                      controllers.LoginController.login
GET     /logout                     controllers.LoginController.logout
POST    /forgotpassword             controllers.LoginController.forgotPassword

# user

#subscription
GET		/subscription/upgrade		controllers.SubscriptionController.upgradeSubscriptionPage
POST	/subscription/upgrade		controllers.SubscriptionController.upgradeSubscription
POST	/subscription/cancel		controllers.SubscriptionController.cancelSubscription

# admin
GET    /admin/users                       controllers.AdminController.users
POST   /admin/users/edit	              controllers.AdminController.editUser
POST   /admin/users/delete	              controllers.AdminController.deleteUser
POST   /admin/users/add		              controllers.AdminController.addUser

GET    /admin/products                    controllers.AdminController.products
POST   /admin/products/edit		          controllers.AdminController.editProduct
POST   /admin/products/delete		      controllers.AdminController.deleteProduct
POST   /admin/products/add		          controllers.AdminController.addProduct

GET    /admin/credit-cards                controllers.AdminController.creditCards
POST   /admin/credit-cards/edit      	  controllers.AdminController.editCreditCard
POST   /admin/credit-cards/delete         controllers.AdminController.deleteCreditCard
POST   /admin/credit-cards/add	          controllers.AdminController.addCreditCard

GET    /admin/transactions                			controllers.AdminController.transactions
GET    /admin/transactions/get-credit-cards        	controllers.AdminController.getUserCreditCards
POST   /admin/transactions/edit         			controllers.AdminController.editTransaction
POST   /admin/transactions/delete			        controllers.AdminController.deleteTransaction
POST   /admin/transactions/add			            controllers.AdminController.addTransaction
POST   /admin/transactions/refund			        controllers.AdminController.refundTransaction

GET    /admin/auth-net-accounts                     controllers.AdminController.authNetAccounts
POST   /admin/auth-net-accounts/add         		controllers.AdminController.addAuthNetAccount
POST   /admin/auth-net-accounts/edit        		controllers.AdminController.editAuthNetAccount
POST   /admin/auth-net-accounts/delete		        controllers.AdminController.deleteAuthNetAccount

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
